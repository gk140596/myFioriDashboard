<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="dashdashboard.controller.Selection"
	xmlns:html="http://www.w3.org/1999/xhtml" xmlns:l="sap.ui.layout" xmlns:f="sap.ui.layout.form" xmlns:m="sap.m">
	<Page title="{i18n>view1title}" id="selection" showHeader="true">
		<Panel width="auto" expandable="true" expanded="true" expandAnimation="true">
			<l:Grid defaultSpan="L12 M7 S12" width="auto">
				<l:content>
					<f:SimpleForm id="SimpleForm" minWidth="1024" maxContainerCols="2" layout="ResponsiveLayout" editable="true" visible="true">
						<f:content>
							<Label text="{i18n>Sales Person}" design="Bold" labelFor="salesperson" required="true" class="sapUiLargeMarginTop"/>
							<ComboBox id="salesPerson" width="auto" change="sChange" class="sapUiLargeMarginTop"
								items="{ path: '/F4_SALESPERSONSet', sorter: { path: 'Employee' } }">
								<core:Item key="{Employee}" text="{Employeefullname}, {Employee}"/>
							</ComboBox>
							<Label/>
							<Label text="{i18n>Customer}" design="Bold" labelFor="customer" class="sapUiSmallMarginTop sapUiLargeMarginBottom"/>
							<ComboBox id="customer" width="auto" change="cChange" class="sapUiSmallMarginTop sapUiLargeMarginBottom"
								items="{ path: '/F4_CUSTOMERSet', sorter: { path: 'Kunnr' } }">
								<core:Item key="{Kunnr}" text="{Mcod1}, {Kunnr}"/>
							</ComboBox>
							<Label/>
							<HBox>
								<m:Button type="Emphasized" text="{i18n>Approval1}" press="onPress1">
									<layoutData>
										<FlexItemData growFactor="0.01"/>
									</layoutData>
								</m:Button>
								<m:Button type="Emphasized" text="{i18n>Approval2}" press="onPress2">
									<layoutData>
										<FlexItemData growFactor="0.01"/>
									</layoutData>
								</m:Button>
								<m:Button type="Emphasized" text="{i18n>Approval3}" press="onPress3">
									<layoutData>
										<FlexItemData growFactor="0.01"/>
									</layoutData>
								</m:Button>
							</HBox>
						</f:content>
					</f:SimpleForm>
				</l:content>
			</l:Grid>
		</Panel>
		<footer >
			<OverflowToolbar id="Footer1" class="sapUiSmallMarginBottom"></OverflowToolbar>
		</footer>
	</Page>
</mvc:View>