<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="dashdashboard.controller.Approval"
	xmlns:html="http://www.w3.org/1999/xhtml">
			<Page id="approval" title="Approval Screen" showNavButton="true"
		navButtonPress="onNavBack"
        enableScrolling="false"
		class="sapUiContentPadding" >
 
		<content>
			
            <Table id="idProductsTable"
                   items="{/ProductCollection}">
                <headerToolbar>
                    <OverflowToolbar id="otbSubheader">
                        <ToolbarSpacer/>
                      
                    </OverflowToolbar>
                </headerToolbar>
                <columns>
<!--                     <Column width="12em"> -->
                    <Column hAlign="Right"><Text text="Sales Order" /></Column>
                    <Column  demandPopin="true" hAlign="Right"><Text text="Item" /></Column>
                    <Column  demandPopin="true" hAlign="Right"><Text text="Material" /></Column>
                    <Column hAlign="Right"><Text text="Ord Qty" /></Column>
                    <Column hAlign="Right"><Text text="Conf Qty" /></Column>
                    <Column hAlign="Right"><Text text="Rate Per TON" /></Column>
                    <Column hAlign="Right"><Text text="Qty in PC" /></Column>
                    <Column hAlign="Right"><Text text="Amount PCs" /></Column>
                    <Column hAlign="Right"><Text text="Qty in MT" /></Column>
                    <Column hAlign="Right"><Text text="Net Weight" /></Column>
                    <Column hAlign="Right"><Text text="Rate per PC" /></Column>
                </columns>
                <items>
                    <ColumnListItem>
                        <cells>
                            <ObjectIdentifier title="{Name}" text="{ProductId}" />
                            <Text text="{SupplierName}" />
                            <Text text="{Width} x {Depth} x {Height} {DimUnit}" />
                            <ObjectNumber
                                    number="{
			                            parts:[{path:'Price'},{path:'CurrencyCode'}],
			                            type: 'sap.ui.model.type.Currency',
		                            	formatOptions: {showMeasure: false}
		                            }"
                                    unit="{CurrencyCode}" />
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
		</content>
		<footer >
            <OverflowToolbar id="otbFooter" class="sapUiSmallMarginBottom">
                <ToolbarSpacer/>
                <Button type="Accept" text="Approve">
                    <layoutData><OverflowToolbarLayoutData moveToOverflow="false" /></layoutData>
                </Button>
                <Button type="Reject" text="Reject">
                    <layoutData><OverflowToolbarLayoutData moveToOverflow="false" /></layoutData>
                </Button>
            </OverflowToolbar>
		</footer>
 
	</Page>
	
</mvc:View>